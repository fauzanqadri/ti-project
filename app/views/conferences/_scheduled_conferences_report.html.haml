#scheduled-conferences-report-modal.modal.fade{tabindex: "-1", role: "dialog", "aria-labelledby" => "scheduledConferencesModalLabel", "aria-hidden" => "true", "data-backdrop" => "static", "data-keyboard" => "true"}
	.modal-dialog{style: "width: 1000px;"}
		.modal-content
			.modal-header
				%button.close{type: "button", "data-dismiss" => "modal", "aria-hidden" => true} &times;
				%h4#scheduledConferencesModalLabel.modal-title Laporan Penjadwalan Seminar / Sidang
			.modal-body
				%embed{src: "#{show_conferences_report_path(format: "pdf", start: report_params.start, end: report_params.ends, type: report_params.type, department_id: report_params.department_id)}", width: "100%", height: "450px"}
			.modal-footer
				= link_to show_conferences_report_path(format: "pdf", start: report_params.start, end: report_params.ends, type: report_params.type, department_id: report_params.department_id, download: true), class: "btn btn-primary" do
					%i.fa.fa-download
					Download
				%button.btn.btn-default{type: "button", "data-dismiss" => "modal"}
					%i.fa.fa-times
					Cencel