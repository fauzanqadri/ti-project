var html = "<%= j render('detail') %>";
var studentDetail = $("#student-detail");
if (studentDetail.length == 1) {
	studentDetail.modal("hide");
	studentDetail.on('hidden.bs.modal', function(e){
		$(e.target).remove();
		$("body").append(html);
		$("#student-detail").modal({show: true});
	});
}else{
	$("body").append(html);
	$("#student-detail").modal({show: true});	
}