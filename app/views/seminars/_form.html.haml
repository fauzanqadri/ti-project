= form_for @seminar do |f|
  - if @seminar.errors.any?
    #error_explanation
      %h2= "#{pluralize(@seminar.errors.count, "error")} prohibited this seminar from being saved:"
      %ul
        - @seminar.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :local
    = f.text_field :local
  .field
    = f.label :start
    = f.datetime_select :start
  .field
    = f.label :end
    = f.datetime_select :end
  .actions
    = f.submit 'Save'
