var html = "<%= j render('show') %>";
var seminarModal = $("#seminar-modal");
if (seminarModal.length == 1) {
	seminarModal.modal("hide");
	seminarModal.on('hidden.bs.modal', function(e){
		$(e.target).remove();
		$("#conferences footer").append(html);
		$("#seminar-modal").modal({show: true});
	});
}else{
	$("#conferences footer").append(html);
	$("#seminar-modal").modal({show: true});	
}