var html = "<%= j render('form') %>";
var facultyModal = $("#faculty-modal");
if (facultyModal.length == 1) {
	facultyModal.modal("hide");
	facultyModal.on('hidden.bs.modal', function(e){
		$(e.target).remove();
		$("footer").append(html);
		$("#faculty-modal").modal({show: true});
	});
}else{
	$("footer").append(html);
	$("#faculty-modal").modal({show: true});	
}