#faculty-modal.modal.fade{tabindex: "-1", role: "dialog", "aria-labelledby" => "facultyModalLabel", "aria-hidden" => true, "data-backdrop" => "static", "data-keyboard" => "true"}
	.modal-dialog
		.modal-content
			.modal-header
				%button.close{type: "button", "data-dismiss" => "modal", "aria-hidden" => true} &times;
				%h4#facultyModalLabel.modal-title
					= @faculty.new_record? ? "Tambah Fakultas" : "Edit Fakultas"
			= form_for @faculty, remote: "true", html: {role: "form", class: "form-horizontal"} do |f|
				.modal-body
					= render 'layouts/shared/errors', :object => f.object
					.form-group
						= f.label :nama_fakultas, class: "col-sm-3 control-label"
						.col-sm-9
							= f.text_field :name, class: "form-control", placeholder: "Nama Fakultas"
					.form-group
						= f.label :website, class: "col-sm-3 control-label"
						.col-sm-9
							= f.text_field :website, class: "form-control", placeholder: "http://example.com"
				.modal-footer
					%button.btn.btn-primary{type: "submit"}
						%i.fa.fa-upload
						Simpan
					%button.btn.btn-default{type: "button", "data-dismiss" => "modal"}
						%i.fa.fa-times
						Cencel