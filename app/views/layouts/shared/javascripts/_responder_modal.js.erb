<%= yield :additional_js %>
$("<%= selector %>").modal('hide');
$("<%= selector %>").on('hidden.bs.modal', function(e){
	$(e.target).remove();
	$("#the-flash").append("<%= j render partial: 'layouts/shared/flash', locals: {flash: flash} %>");
	$("#the-flash .alert").each(function(i, e){
		$(this).delay(i*1000).fadeIn("slow");
	});
});