var html = "<%= j render partial: 'index', locals: {course: @course} %>";
var lecturerModal = $("#consultation-pdf-modal");
if (lecturerModal.length == 1) {
	lecturerModal.modal("hide");
	lecturerModal.on('hidden.bs.modal', function(e){
		$(e.target).remove();
		$("#consultations footer").append(html);
		$("#consultation-pdf-modal").modal({show: true});
	});
}else{
	$("#consultations footer").append(html);
	$("#consultation-pdf-modal").modal({show: true});	
}