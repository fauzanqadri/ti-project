var html = "<%= j render('detail') %>";
var staffDetail = $("#staff-detail");
if (staffDetail.length == 1) {
	staffDetail.modal("hide");
	staffDetail.on('hidden.bs.modal', function(e){
		$(e.target).remove();
		$("footer").append(html);
		$("#staff-detail").modal({show: true});
	});
}else{
	$("footer").append(html);
	$("#staff-detail").modal({show: true});	
}