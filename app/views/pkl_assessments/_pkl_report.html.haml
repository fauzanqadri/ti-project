#pkl-report-modal.modal.fade{tabindex: "-1", role: "dialog", "aria-labelledby" => "pklReportModalLabel", "aria-hidden" => "true", "data-backdrop" => "static", "data-keyboard" => "true"}
	.modal-dialog{style: "width: 1000px;"}
		.modal-content
			.modal-header
				%button.close{type: "button", "data-dismiss" => "modal", "aria-hidden" => true} &times;
				%h4#pklReportModalLabel.modal-title Form Laporan Penilaian Pkl
			.modal-body
				%embed{src: "#{pkl_pkl_assessments_path(pkl, format: 'pdf')}", width: "100%", height: "450px"}
			.modal-footer
				= link_to pkl_pkl_assessments_path(pkl, format: 'pdf', download: true), class: "btn btn-primary" do
					%i.fa.fa-download
					Download
				%button.btn.btn-default{type: "button", "data-dismiss" => "modal"}
					%i.fa.fa-times
					Cencel