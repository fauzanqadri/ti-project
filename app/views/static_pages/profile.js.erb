var html = '<%= j render(partial: "static_pages/profile/#{current_user.userable_type.downcase}", locals: {user: @user, avatar: @avatar}) %>';
var userProfileModal = $("#user-profile-modal");
if (userProfileModal.length == 1) {
	userProfileModal.modal("hide");
	userProfileModal.on('hidden.bs.modal', function(e){
		$(e.target).remove();
		$("body").append(html);
		$("#user-profile-modal").modal({show: true});
	});
}else{
	$("body").append(html);
	$("#user-profile-modal").modal({show: true});	
}
