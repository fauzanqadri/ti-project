var html = '<%= j render(partial: "static_pages/account", locals: {account: @account}) %>';
var accountModal = $("#account-modal");
if (accountModal.length == 1) {
	accountModal.modal("hide");
	accountModal.on('hidden.bs.modal', function(e){
		$(e.target).remove();
		$("body").append(html);
		$("#account-modal").modal({show: true});
	});
}else{
	$("body").append(html);
	$("#account-modal").modal({show: true});	
}