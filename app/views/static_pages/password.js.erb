var html = '<%= j render(partial: "layouts/shared/password", locals: {account: @account}) %>';
$("#the-flash").append("<%= j render partial: 'layouts/shared/flash', locals: {flash: flash} %>");
var passwordModal = $("#password-modal");
if (passwordModal.length == 1) {
	passwordModal.modal("hide");
	passwordModal.on('hidden.bs.modal', function(e){
		$(e.target).remove();
		$("body").append(html);
		$("#password-modal").modal({show: true});
	});
}else{
	$("body").append(html);
	$("#password-modal").modal({show: true});	
}